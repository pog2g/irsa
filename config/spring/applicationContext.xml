<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    	http://www.springframework.org/schema/beans/spring-beans.xsd
    	http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-4.3.xsd
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">
	
	<!-- 自动扫描(自动注入)，扫描包以及它的子包的所有使用@Service注解标注的类 -->
    <context:component-scan base-package="com.irsa.filter" />
    
    <context:component-scan base-package="com.irsa.console.manager" />
    <context:component-scan base-package="com.irsa.console.service" />
    
    <context:component-scan base-package="com.irsa.cases.manager" />
    
    <context:component-scan base-package="com.irsa.cases.console.service" />
    
    <context:component-scan base-package="com.irsa.cases.defendant.service" />
</beans>